<%- contentFor("section") %>

<h2>Products</h2>
<% categories.forEach(function(category){%>
<a href="/admin/products/category/<%= category.id %>"> <%= category.name %> </a>

<%})%>

<div id="products-list">
  <% products.forEach((product)=>{%>
  <div class="product-holder" data-id="<%= product.id%>">
    <img height="150" src="/images/products/<%= product.images &&
    product.images[0] ? product.images[0] : "default.jpg"%>" alt="">
    <hr />
    <div>
      <span class="product-name" data-target="name"><%= product.name %></span>
      <span class="product-holder-span"
        >Quantity:
        <span class="product-quantity" data-target="quantity"
          ><%= product.quantity %></span
        ></span
      >
      <span class="product-holder-span"
        >Description:
        <span class="product-category" data-target="category"
          ><%= product.category ? product.category.description : "NULL" %></span
        ></span
      >
      <!-- <span class="product-holder-span"
          >Category:
          <span class="product-category" data-target="category"
            ><%= product.category ? product.category.name : "NULL" %></span
          ></span
        > -->
    </div>
    <div>
      <a href="/products/<%= product.name %>">See product</a>
      <!-- <button class="products-button" id="update">💾</button>
        <button class="products-button" id="delete">❌</button> -->
    </div>
  </div>
  <% })%>
</div>
