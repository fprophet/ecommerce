<%- contentFor("section")%>

<h2>Add/Update Products</h2>
<div id="add-prod-wrapper">
  <form id="products-form" action="/products/create" method="POST">
    <div class="input-group">
      <label for="name">Product Name</label>
      <input required type="text" name="name" id="name" />
    </div>
    <div class="input-group">
      <label for="quantity">Quantity</label>
      <input required type="text" name="quantity" id="quantity" />
    </div>
    <div class="input-group">
      <label for="description">Description</label>
      <input required type="text" name="description" id="description" />
    </div>
    <div class="input-group">
      <label for="category">Category</label>
      <select required type="text" name="category" id="category">
        <% categories.forEach(function(category){%>
        <option value="<%=category.id%>"><%=category.name%></option>
        <%})%>
      </select>
    </div>
    <div class="input-group">
      <label for="images">Choose Images Images</label>
      <input
        type="file"
        name="images"
        multiple="multiple"
        id="add-prod-images"
      />
    </div>
    <div>
      <button type="submit" id="submit-form" value="">Save product üíæ</button>
      <button id="cancel-edit" value="">Cancel Edit ‚ùå</button>
    </div>
  </form>
  <div class="product-img-display">
    <div class="main-img-wrapper">
      <div class="left-arr-holder arr-holder" data-dir="left">
        <i class="fa-solid fa-angle-left"></i>
      </div>
      <div class="img-display">
        <img
          src=""
          alt=""
          width="800"
          height="250"
          id="main-display"
          data-id=""
        />
      </div>
      <div class="right-arr-holder arr-holder" data-dir="right">
        <i class="fa-solid fa-chevron-right"></i>
      </div>
    </div>
    <div class="img-collection-wrapper"></div>
  </div>
</div>
