<%- contentFor("section")%>
<style>
  #add-prod-wrapper {
    display: flex;
  }
  #products-form {
    flex: 1;
  }
  .add-img-display {
    flex: 1;
    box-shadow: 0px 4px 8px -2px rgba(9, 30, 66, 0.25),
      0px 0px 0px 1px rgba(9, 30, 66, 0.08);
  }
  .main-img-wrapper {
    display: flex;
    /* height: 100%; */
    position: relative;
  }
  .arr-holder {
    width: 50px;
    position: absolute;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 50px;
    opacity: 0.2;
    transition: all 0.5s;
  }
  .arr-holder:hover {
    background-color: #cccccc;
    opacity: 0.5;
    cursor: pointer;
  }
  .right-arr-holder {
    right: 0;
  }
  .left-arr-holder {
    left: 0;
  }
  .img-display {
    flex: 5;
  }
  .img-collection-wrapper {
    width: 100%;
    height: 100px;
    display: flex;
    justify-content: space-around;
    border-top: 1px solid #cccccc;
    align-items: center;
  }
  .img-holder {
    width: 70px;
    height: 50px;
  }
  .img-holder img {
    height: 70px;
    width: 100px;
  }
</style>
<h2>Add/Update Products</h2>
<div id="add-prod-wrapper">
  <form id="products-form" action="/products/create" method="POST">
    <div class="input-group">
      <label for="name">Product Name</label>
      <input required type="text" name="name" id="name" />
    </div>
    <div class="input-group">
      <label for="quantity">Quantity</label>
      <input required type="text" name="quantity" id="quantity" />
    </div>
    <div class="input-group">
      <label for="description">Description</label>
      <input required type="text" name="description" id="description" />
    </div>
    <div class="input-group">
      <label for="category">Category</label>
      <select required type="text" name="category" id="category">
        <% categories.forEach(function(category){%>
        <option value="<%=category.id%>"><%=category.name%></option>
        <%})%>
      </select>
    </div>
    <div class="input-group">
      <label for="images">Choose Images Images</label>
      <input
        type="file"
        name[]="file"
        multiple="multiple"
        id="add-prod-images"
      />
    </div>
    <div>
      <button type="submit" id="submit-form" value="">Save product üíæ</button>
      <button id="cancel-edit" value="">Cancel Edit ‚ùå</button>
    </div>
  </form>
  <div class="add-img-display">
    <div class="main-img-wrapper">
      <div class="left-arr-holder arr-holder" data-dir="left">
        <i class="fa-solid fa-angle-left"></i>
      </div>
      <div class="img-display">
        <img
          src=""
          alt=""
          width="800"
          height="250"
          id="main-display"
          data-id=""
        />
      </div>
      <div class="right-arr-holder arr-holder" data-dir="right">
        <i class="fa-solid fa-chevron-right"></i>
      </div>
    </div>
    <div class="img-collection-wrapper"></div>
  </div>
</div>
